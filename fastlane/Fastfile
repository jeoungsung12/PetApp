# This file contains the fastlane.tools configuration

opt_out_usage

default_platform(:ios)

platform :ios do
  desc "Run tests"
  lane :test do
    scan(scheme: "PetApp")
  end
  
  desc "Sync certificates and profiles"
  lane :sync_signing do 
    match(
      type: "appstore",
      app_identifier: "WEDLE.Warala",
      username: ENV["APPLE_ID"]
    )
  end

  desc "Push a new beta build to TestFlight"
  lane :beta do
    sync_signing
    
    # 버전 자동 증가
    increment_version_number(
      xcodeproj: "PetApp.xcodeproj",
      bump_type: "patch"
    )
    
    increment_build_number(xcodeproj: "PetApp.xcodeproj")
    
    build_app(scheme: "PetApp")
    
    upload_to_testflight(
      username: ENV["APPLE_ID"],
      skip_waiting_for_build_processing: true
    )
  end
end